<Window x:Class="BayWyn_Couriers.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BayWyn_Couriers.Views"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>
        
        <!-- Window Border -->
        <Border CornerRadius="20" />
        <!-- Base Grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230" />
                <ColumnDefinition Width="620" />
            </Grid.ColumnDefinitions>

            <!-- Side Menu -->
            <Grid Grid.Column="0">
                <Label Content="Admin Page" HorizontalAlignment="Left" Height="109"/>
                <Button Content="Manage Users" HorizontalAlignment="Left" Margin="34,200,0,0" VerticalAlignment="Top" Width="161" Height="40"/>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Column="1">
                <Label Content="Welcome, Admin!" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" FontSize="24"/>
            </Grid>
        </Grid>

    </Grid>

</Window>
